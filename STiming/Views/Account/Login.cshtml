@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure it uses your main layout
}

<div id="login-page" class="content-section">
    <h2>Login</h2>
    <div id="login-section">
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Login</button>
            @if (ViewData.ModelState.ContainsKey(string.Empty))
            {
                <div class="error">
                    @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                </div>
            }
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Hide the main content and nav on the login page specifically
        $(document).ready(function() {
            $('#main-nav').hide();
            $('#home-page').hide();
            $('.tab-content').hide();
            $('#auth-status').hide(); // Hide auth status on login page
        });
    </script>
}